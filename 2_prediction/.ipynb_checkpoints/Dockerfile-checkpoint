FROM tensorflow/tensorflow:latest
RUN apt-get -y update && apt-get install -y --no-install-recommends \
		 apt-utils \
		 ca-certificates \
		 curl \
		 git \
		 rsync \
		 nginx \
		 software-properties-common \
		 vim \
         wget \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

RUN pip --no-cache-dir install \
        boto3 \
        keras \
		matplotlib \
        pandas \
        pytz \
        pyyaml \
        s3fs \
		sklearn

RUN wget http://prdownloads.sourceforge.net/ta-lib/ta-lib-0.4.0-src.tar.gz && tar -xvzf ta-lib-0.4.0-src.tar.gz && cd ta-lib/ && ./configure -prefix=/usr && make && make install && cd .. && rm -rf ta-lib && rm ta-lib-0.4.0-src.tar.gz

RUN pip --no-cache-dir install \
		backtrader \
        flask \
        gevent \
        gunicorn
		
RUN wget http://prdownloads.sourceforge.net/ta-lib/ta-lib-0.4.0-src.tar.gz \
	&& tar -xvzf ta-lib-0.4.0-src.tar.gz \
	&& cd ta-lib/ \
	&& ./configure -prefix=/usr \
	&& make \
	&& make install \
	&& cd .. \
	&& rm -rf ta-lib \
	&& rm ta-lib-0.4.0-src.tar.gz

RUN pip install ta-lib
		
ENV PYTHONUNBUFFERED=TRUE
ENV PYTHONDONTWRITEBYTECODE=TRUE
ENV PATH="/opt/ml/code:${PATH}"

COPY model /opt/ml/code
RUN chmod -R 777 /opt/ml/code
WORKDIR /opt/ml/code